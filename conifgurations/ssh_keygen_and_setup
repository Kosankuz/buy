// please follow the next steps on the your machine

sudo cd ~/.ssh

ssh-keygen -t rsa

// now we need to copy public key to authorized_keys on the server

cat ~/.ssh/id_rsa.pub | ssh login@192.168.1.0 "mkdir -p ~/.ssh && chmod 700 ~/.ssh && cat >>  ~/.ssh/authorized_keys"^C


// now you should be able to connect by running command from the client

ssh server@192.168.0.13
